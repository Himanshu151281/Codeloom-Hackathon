<% layout("/layouts/boilerplate") %>
<div class="row">
<div class="col-8 offset-2">
    <br>
    <br>
    <h3>Organise Events</h3>
    <!-- 00000009 -->
    <form action="/listings" method="POST">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" placeholder="Add a catchy title" class="form-control">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control">
            </textarea>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input type="text" name="listing[image]" placeholder="Enter image URL/Link" class="form-control">
        </div>
        <div class="row">
            <div class="mb-3 col-md-8">
                <label for="price" class="form-label">Price</label>
                <input type="number" placeholder="If the service is free, Enter 0 rupees." name="listing[price]" class="form-control">
            </div>
            <div class="mb-3 col-md-4">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" placeholder="india" class="form-control">
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" placeholder="Raipur, Chhattishgarh" class="form-control">
        </div > 
        <button class="btn btn-dark add-btn mb-5">Add</button>
        <br>
        <br>
    </form>
    
</div>
</div>
